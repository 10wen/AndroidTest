<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定个人信息"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="昵称"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:maxLength="16"
            android:hint="请填写昵称"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="QQ"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/userQq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:maxLines="1"
            android:inputType="number"
            android:hint="请填写QQ账号"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:maxLength="20"
            android:text="邮箱"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写邮箱地址"
            android:maxLines="1"
            android:maxLength="20"
            android:inputType="textEmailAddress"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:importantForAutofill="no"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="选择性别"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg_sex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="男"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/rgbtn_boy"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textSize="20dp"
                android:text="女"
                android:id="@+id/rgbtn_girl"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择所在城市"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>


        <Spinner
            android:id="@+id/userCity"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校名称"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写学校名称"
            android:maxLength="50"
            android:maxLines="1"
            android:inputType="text"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:id="@+id/userSchool"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写地址信息"
            android:maxLines="2"
            android:maxLength="100"
            android:inputType="text"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="5dp"
            tools:ignore="HardcodedText,SpUsage" />

    </LinearLayout>

    <Button
        android:id="@+id/bindInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:background="#96B97D"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/JumpToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#619FA6"
        android:background="#00000000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="跳过" />

</LinearLayout>